{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "includes": [
      "app/**/*.ts",
      "database/**/*.ts",
      "!node_modules/**/*",
      "!worker-configuration.d.ts",
      "!.react-router/**/*",
      "!app/components/ui/**/*",
      "!.codex/**/*",
      "!.wrangler/**/*",
      "!contents/**/*",
      "!drizzle.config.ts",
      "!app/app.css",
      "!contents/**/*",
      "!public/**/*"
    ],
    "ignoreUnknown": false
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noNoninteractiveElementInteractions": "off"
      },
      "performance": {
        "noImgElement": "off",
        "useTopLevelRegex": "off"
      },
      "nursery": {
        "useImageSize": "off"
      },
      "suspicious": {
        "noConsole": "off"
      }
    }
  }
}
